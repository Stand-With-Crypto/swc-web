generator client {
  provider        = "prisma-client-js"
  output          = "../src/data/prisma/generated/swc-civic"
  previewFeatures = ["driverAdapters", "postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("SWC_CIVIC_DATABASE_URL")
  extensions = [postgis(schema: "public")]
}

// This table is automatically created by the postgis extension
model spatial_ref_sys {
  srid      Int     @id
  auth_name String? @db.VarChar(256)
  auth_srid Int?
  srtext    String? @db.VarChar(2048)
  proj4text String? @db.VarChar(2048)
}

model constituencies {
  id               Int                                      @id @default(autoincrement())
  constituencyName String                                   @map("constituency_name")
  stateCode        String?                                  @map("state_code")
  geometry         Unsupported("geometry(GeometryZ,4326)")? @map("geometry")
  countryCode      String?                                  @map("country_code")

  @@index([geometry], map: "constituencies_geometry_geom_idx", type: Gist)
}
